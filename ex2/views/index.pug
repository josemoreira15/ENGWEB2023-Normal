extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Plantas
    .w3-container
      table.w3-table-all
        tr
          th ID 
          th Freguesia 
          th Espécie
          th Estado 
          th Número de Intervenções
        
        each p in ps 
          tr
            td
              a(href="/" + p._id)= p._id
            td= p.Freguesia
            td
              a(href="/especies/" + p.Especie)= p.Especie
            td= p.Estado
            td= p.NumeroDeIntervencoes
              
    footer.w3-container.w3-teal
      h5 Generated by Exame::EngWeb2023 in #{d}
