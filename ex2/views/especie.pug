extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Espécie
    .w3-container
      table.w3-table-all
        tr
          td Nome da Espécie
          td= ps[0].Especie
        tr
          td Nome Científico
          td= ps[0].NomeCientifico
        tr
          td Número de Registos da Espécie
          td= ps.length

      table.w3-table-all
        tr
          th ID 
          th Freguesia 
          th Espécie
          th Estado 
          th Número de Intervenções
        
        each p in ps 
          tr
            td
              a(href="/" + p._id)= p._id
            td= p.Freguesia
            td= p.Especie
            td= p.Estado
            td= p.NumeroDeIntervencoes
              
    footer.w3-container.w3-teal
      h5 Generated by Exame::EngWeb2023 in #{d}
      a(href="/") [Página Principal]